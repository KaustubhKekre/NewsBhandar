<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.falcon.newsbhandar">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/newslogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/newslogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signInOptions"
            android:theme="@style/temp"
            android:label="Sign In">

        </activity>
        <activity android:name=".countrySelection"
            android:configChanges="orientation|screenSize"
            >

        </activity>
        <activity android:name=".detailedNews">

        </activity>
        <activity android:name=".errorConnect"
            android:theme="@style/temp"
            android:label="No Internet Connection">

        </activity>
    </application>

</manifest>